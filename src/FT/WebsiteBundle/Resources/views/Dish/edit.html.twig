{% extends "layout.html.twig" %}

{% block body %}

    {{ form_start(form) }}


    <section id="formulaire">
        <div class="row">
            <div class="desc col-lg-2"></div>
            <div class="formulaire col-lg-8">
                {{ form_errors(form) }}
                <h4 class="intro_form">C'est ici que vous pouvez modifier un plat de votre carte</h4></br>
                <div class="form-group">
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="input-group mb-3">
                    {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                    <div class="input-group-append">
                        <span class="input-group-text">â‚¬</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_widget(form.image.file, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.image.alt, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}

{% endblock %}